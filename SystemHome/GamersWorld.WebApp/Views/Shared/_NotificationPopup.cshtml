@* Views/Shared/_NotificationPopup.cshtml *@
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1050;">
    <div id="notificationPopup" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <span id="notifyMessageLine1">   </span>
                <br />
                <span id="notifyMessageLine2"></span>
                <br />
                <a href="reports" class="btn btn-primary mt-2">Please click to show report</a>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>
